{
  "openapi": "3.0.4",
  "info": {
    "title": "Sourcing.Messaging.API",
    "version": "1.0"
  },
  "paths": {
    "/api/inbox/{userId}": {
      "get": {
        "tags": [
          "Inbox"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/messages": {
      "post": {
        "tags": [
          "Messages"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/MessageDto"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MessageDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MessageDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MessageDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/messages/{userA}/{userB}": {
      "get": {
        "tags": [
          "Messages"
        ],
        "parameters": [
          {
            "name": "userA",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "userB",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MessageDto": {
        "type": "object",
        "properties": {
          "senderId": {
            "type": "string",
            "nullable": true
          },
          "receiverId": {
            "type": "string",
            "nullable": true
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "sentAt": {
            "type": "string",
            "format": "date-time"
          },
          "isRead": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }
}